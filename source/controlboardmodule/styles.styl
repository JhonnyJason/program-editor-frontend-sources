#controlboard
    position fixed
    bottom 0
    right 0
    height: 150px
    width: 200px
    background-color: #98fb98
    transition transform 0.8s
    transform translate(0,0)
    #open-close-arrow
        transform rotate(180deg)
    
    svg 
        overflow visible
    g
        cursor pointer
        transform-origin: 50% 50%
        transition transform 0.3s
    
    g:not(#open-close-arrow):hover
        opacity 0.8
        transform scale(1.1)  


    circle
        transition fill 0.5s
    circle.green-button-circle
        fill rgba(0,0,0,0)
    circle.red-button-circle
        fill #f30f07

    .selected
        circle.green-button-circle
            fill #157c10
        circle.red-button-circle
            fill rgba(0,0,0,0)
            
#controlboard.compressed
    opacity: 0.4
    background-color rgba(0,0,0,0.3)
    transform translate(185px, 140px) scale(1.4)
    #open-close-arrow
        transform rotate(0)