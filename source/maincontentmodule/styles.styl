/*==============================================================================
MAINCONTENT
==============================================================================*/
#maincontent
    display none
    margin-top: header-height

#maincontent.loggedin
    display block

/*==============================================================================
General Elements on this Page
==============================================================================*/
    .h-spacer
            margin-right auto
    .unit
        display: inline-block
        color: #777
        margin-right 10px
    h1
        background-color: light-blue
        font-size: medium-font
        padding: medium-font
    .pte-space
        width: 100%
        height: pte-space-height
        svg 
            // background-color rgba(100, 255, 100, 0.2)
            height 100%
            width 100%
    .vib-space
        width: 100%
        height vib-space-height
    #agression-space
        width: 100%
        height agression-space-height
    .footer
        width 100%
        height 20px
        background-color: main-blue
    input
        text-align right
        border: none
    .top-section
        padding 20px
        button
            background-color #aaa
            padding 3px
            border-radius 5px
            margin 0 20px
    .top-section:nth-child(2n)
        background-color: light-blue

/*==============================================================================
Choose Progrqm Section
==============================================================================*/
    #choose-program-section
        display: flex
        justify-content: space-around
        align-items: center
        button 
            transition all 0.3s
            border solid 2px main-blue
            padding 10px
            margin-right 30px
            border-radius: 10px
        button.selected
            padding: 15px
            background-color: light-blue

        #load-button
            // background-color: main-blue
            background-color: #bbb
            padding: 3px 5px
            border none
        #load-button:active
            position: relative
            top: -3px
        #program-select
            margin-right: 30px
            margin-left 50px

/*==============================================================================
Choose Progrqm Section
==============================================================================*/
    #langtag-section
        button
            transition all 0.3s
            border solid 2px main-blue
            padding 5px
            margin-right 30px
            border-radius: 10px
            background-color: white
        button.selected
            padding: 10px
            background-color: light-blue

/*==============================================================================
Section for editing the Program Description
==============================================================================*/
    #program-description-section
        label
            display block

/*==============================================================================
Section for defining the Program stats
==============================================================================*/
    #program-stats-section
        display flex
        justify-content: space-around
        input
            width 35px
            margin-right: 20px

/*==============================================================================
Section for uploading the Program Icons
==============================================================================*/
    #program-icon-section
        display flex
        justify-content: space-around
        label
            display block
        input
            display block
        img
            width 200px
            height 200px

/*==============================================================================
Section to define Minimum and Maximum Temperature
==============================================================================*/
    #min-max-define-section
        display flex
        justify-content: space-around

/*==============================================================================
Section to define Duration of the Program
==============================================================================*/
    #duration-section
        display: flex
        justify-content: space-between
        align-items: center
        width: 500px

/*==============================================================================
Program Data Container
==============================================================================*/
    #program-data-container
        position relative
/*==============================================================================
Buffer Table Container
==============================================================================*/
    #buffer-table-container
        width: 100%
        margin: 0
        padding: 0
        overflow-x scroll
        table
            margin: 5px
            box-sizing border-box
            td
                padding: 5px
                cursor pointer
