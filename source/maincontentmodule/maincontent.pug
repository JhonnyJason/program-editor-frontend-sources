#maincontent
    #choose-program-section.top-section
        button.pressbutton#perform-programs-button Perform
        button.pressbutton#relax-programs-button Relax
        select#program-select
            option Program
        //- button#load-button Laden
        .h-spacer
    
    #langtag-section.top-section
        button.pressbutton#de-langtag-button de
        button.pressbutton#en-langtag-button en
        button.pressbutton#es-langtag-button es
        
    #program-name-section.top-section
        label(for="program-name-input") Name des Programms:
        input#program-name-input(type="text")
        
    #program-stats-section.top-section
        .subline
            label(for="intensity-stat-input") Intensität:
            input#intensity-stat-input(type="number" step="1" min="0" max="6")
        .subline
            label(for="temperature-stat-input") Temperatur:
            input#temperature-stat-input(type="number" step="1" min="0" max="6")
        .subline
            label(for="vibration-stat-input") Vibration:
            input#vibration-stat-input(type="number" step="1" min="0" max="6")
        .h-spacer

    #program-icon-section.top-section
        .subline
            //- form(ref='uploadForm' action='/upload' method='post' encType="multipart/form-data")
            label(for="svg-file-input") Programm Icon:
            button.programbutton.unselectable(onselectstart="return false;")
                .button-text template
                .button-svg-container
            //- img#program-icon
            input#svg-file-input(type="file")
            label#uploading-indicator
            //- input(type="submit")
