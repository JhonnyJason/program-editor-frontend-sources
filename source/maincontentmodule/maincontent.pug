        //-     label(for="gif-file-input") Animiertes Icon:
        //-     img#animated-icon
        //-     input#gif-file-input(type="file")
        .h-spacer

    #program-description-section.top-section
        label(for="program-description-text") Beschreibung des Programms:
        textarea#program-description-text(cols="100", rows="30")

